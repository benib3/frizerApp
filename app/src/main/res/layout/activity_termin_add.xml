<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".user.TerminAddActivity">


    <LinearLayout
        android:id="@+id/linearLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.449">

        <TextView
            android:id="@+id/naslov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#48FDFDFD"
            android:fontFamily="sans-serif-black"
            android:text="@string/zakazite_svoj_termin_na_vrijeme_odaberite_datum_i_vrijeme"
            android:textAllCaps="true"
            android:textColor="#4E4D4D"
            android:textSize="20sp" />

        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="146dp"
            android:layout_height="53dp"
            android:onClick="onClick"
            android:text="@string/datum_termina"
            android:textColor="#ECE7E7"
            app:backgroundTint="#050505" />

        <TextView
            android:id="@+id/textDatum"
            android:layout_width="136dp"
            android:layout_height="48dp"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center"
            android:hint="@string/d_m_g"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/vrijemeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/izaberite_vrijeme_termina"
            android:textColor="#000000"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/spin_termini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/datumView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"

            android:fontFamily="sans-serif-condensed"
            android:text="@string/izaberite_uslugu"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spin_usluge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/zakaziBtn"
            android:layout_width="145dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:onClick="terminHandler"
            android:text="@string/zakazi"
            android:textColor="#009688"
            app:backgroundTint="#050505" />

    </LinearLayout>

